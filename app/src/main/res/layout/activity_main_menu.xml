<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.softvilla.steppingstonesparentportal.MainMenu"
    android:background="@drawable/back1">

    <GridView
        android:numColumns="2"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/grid"
        android:columnWidth="170dp"
        android:stretchMode="columnWidth"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/relativeLayout2" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:alpha="0.3"
        android:background="@color/colorPrimary"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/chotalogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/logos"
            android:layout_marginLeft="21dp"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stepping Stones School Shah Jamal"
            android:textColor="#FFF"
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/chotalogo"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered By"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/powerLogo"
            android:layout_marginBottom="4dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/chotalogo" />

        <ImageView

            android:id="@+id/powerLogo"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/unnamed"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"/>
    </RelativeLayout>
</RelativeLayout>